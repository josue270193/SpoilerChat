<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:background="@color/darkblue"
    android:visibility="invisible">
    
	<ImageView
	        android:id="@+id/mensaje_flotant_imagen"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/mensaje_flotant_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/mensaje_flotant_imagen"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="MENSAJE TITULO"
        android:textColor="#bbffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/mensaje_flotant_contenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mensaje_flotant_titulo"
        android:layout_toRightOf="@+id/mensaje_flotant_imagen"
        android:layout_alignBottom="@+id/mensaje_flotant_imagen"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="MENSAJE CONTENIDO"
        android:textColor="#bbb2fd25"
        android:textSize="9sp" />
    
</RelativeLayout>
